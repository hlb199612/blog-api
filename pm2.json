{
  "apps": [
    {
      "name": "blog-api",
      "script": "bin/www",
      "merge_logs": true,
      "instances": 0,
      "exec_mode": "cluster",
      "error_file": "/var/log/nodejs/blog-api/err.log",
      "out_file": "/var/log/nodejs/blog-api/out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3031
      }
    }
  ]
}